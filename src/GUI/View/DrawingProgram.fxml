<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="900.0" prefWidth="1350.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controller.DrawingProgram">
    <center>
        <AnchorPane>
            <children>
                <Canvas fx:id="canvas" height="853.0" onDragDropped="#dragDroppedCanvas" onDragOver="#dragOverCanvas" width="1264.0" />
            </children>
        </AnchorPane>
    </center>

    <right>
        <VBox spacing="10" style="-fx-padding: 10px;">
            <Button onAction="#handleSymbol2ButtonClicked" text="Symbol 2" />
            <Button fx:id="closeButton" onAction="#handleCloseWindow" text="Symbol 3" />
         <ImageView fx:id="symbol1" fitHeight="72.0" fitWidth="99.0" onDragDetected="#dragSymbolOne" onDragDone="#dragDoneSymbolOne" onMouseEntered="#mouseEnterSymbol" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../data/images/Editbtn01.png" />
            </image>
         </ImageView>
        </VBox>
    </right>

    <bottom>
        <AnchorPane prefHeight="51.0" prefWidth="1350.0">
            <children>
                <Button layoutX="10" layoutY="10" onAction="#handleAddLineButtonClicked" text="Add Line" />
                <ColorPicker fx:id="colorPicker" layoutX="90" layoutY="10" />
            </children>
        </AnchorPane>
    </bottom>
</BorderPane>
